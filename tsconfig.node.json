{
	"compilerOptions": {
		"target": "ES2022",
		"lib": [
			"ES2023"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		"types": [
			"node"
		],
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"servers/*",
		"vite.config.*",
		".storybook/**/*",
		"src/constants/*",
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*",
		".docs/.vitepress/config.*",
		".docs/.vitepress/utils/*",
		"plugins/*"
	]
}
